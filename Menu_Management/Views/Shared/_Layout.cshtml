<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@using Microsoft.AspNet.Identity
{
<body background="~/Content/Images/adrien-olichon-_kNEgjza0t8-unsplash.jpg">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Menu Management", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <!--<li>@Html.ActionLink("Home", "Index", "Account")</li>-->
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                        <!--<li>@Html.ActionLink("Register", "Register", "Account")</li>-->
                    </ul>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Menu Management", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <!--<li>@Html.ActionLink("Home", "Index", "Account")</li>-->
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <!--<li>@Html.ActionLink("Register", "Register", "Account")</li>-->
                        </ul>
                    </div>
                </div>
            </div>
        }
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p style="color:white">&copy; @DateTime.Now.Year - Indian Delicacy</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
